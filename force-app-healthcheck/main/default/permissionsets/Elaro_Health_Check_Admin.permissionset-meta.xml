<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Full administrative access to the Elaro Health Check package. Grants access to all Apex classes, the dashboard tab, and full read/write on the feature flag Custom Setting.</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>Elaro Health Check Admin</label>
    <classAccesses>
        <apexClass>HealthCheckController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>HealthCheckScanner</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>MFAComplianceScanner</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>ProfilePermissionScanner</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>SessionSettingsScanner</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>AuditTrailScanner</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>ScoreAggregator</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>ToolingApiService</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>HealthCheckFeatureFlags</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>HealthCheckResult</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>ScanFinding</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>ScanRecommendation</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>HCLogger</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <objectPermissions>
        <object>Health_Check_Feature_Flags__c</object>
        <allowCreate>true</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Health_Check_Feature_Flags__c.Health_Check_Enabled__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Health_Check_Feature_Flags__c.Max_LoginHistory_Days__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <tabSettings>
        <tab>Health_Check_Dashboard</tab>
        <visibility>Visible</visibility>
    </tabSettings>
</PermissionSet>
